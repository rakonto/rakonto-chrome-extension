{
    "name": "Rakonto",
    "version": "1.0",
    "description": "Rakonto verifier",
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "permissions": [
      "tabs",
      "storage"
    ],
    "browser_action": {
      "default_popup": "popup.html"
    },
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "manifest_version": 2
  }
